<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_find_nearby" />

    <app.juky.squircleview.views.SquircleButton
        android:id="@+id/button_find_nearby"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Find Nearby Police Stations"
        app:squircle_background_color="@color/material_dynamic_primary95"
        app:squircle_border_gradient_direction="top_to_bottom"
        app:squircle_border_gradient_end_color="@color/teal_200"
        app:squircle_border_gradient_start_color="@color/purple_500"
        app:squircle_border_width="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_find_hospitals"
        android:layout_marginBottom="2dp" />

    <app.juky.squircleview.views.SquircleButton
        android:id="@+id/button_find_hospitals"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Find Nearby Hospitals"
        app:squircle_background_color="@color/material_dynamic_primary95"
        app:squircle_border_gradient_direction="top_to_bottom"
        app:squircle_border_gradient_end_color="@color/teal_200"
        app:squircle_border_gradient_start_color="@color/purple_500"
        app:squircle_border_width="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_call"
        android:layout_marginBottom="2dp" />

    <app.juky.squircleview.views.SquircleButton
        android:id="@+id/button_call"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Make Emergency Call"
        app:squircle_background_color="@color/material_dynamic_primary95"
        app:squircle_border_gradient_direction="top_to_bottom"
        app:squircle_border_gradient_end_color="@color/teal_200"
        app:squircle_border_gradient_start_color="@color/purple_500"
        app:squircle_border_width="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_sms"
        android:layout_marginBottom="2dp" />

    <app.juky.squircleview.views.SquircleButton
        android:id="@+id/button_sms"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Send SMS"
        app:squircle_background_color="@color/material_dynamic_primary95"
        app:squircle_border_gradient_direction="top_to_bottom"
        app:squircle_border_gradient_end_color="@color/teal_200"
        app:squircle_border_gradient_start_color="@color/purple_500"
        app:squircle_border_width="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_whatsapp"
        android:layout_marginBottom="2dp" />

    <app.juky.squircleview.views.SquircleButton
        android:id="@+id/button_whatsapp"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Open WhatsApp"
        app:squircle_background_color="@color/material_dynamic_primary95"
        app:squircle_border_gradient_direction="top_to_bottom"
        app:squircle_border_gradient_end_color="@color/teal_200"
        app:squircle_border_gradient_start_color="@color/purple_500"
        app:squircle_border_width="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
